<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.programadoresemacao.activity.EnviaObjetoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie Objeto"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/envia_objeto_titulo"
    />

    <EditText
        android:id="@+id/envia_objeto_edt_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/envia_objeto_titulo"
        android:layout_toRightOf="@+id/envia_objeto_txt_nome"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:id="@+id/envia_objeto_txt_nome"
        android:layout_alignBaseline="@id/envia_objeto_edt_nome"/>

    <EditText
        android:id="@+id/envia_objeto_edt_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/envia_objeto_edt_nome"
        android:layout_toRightOf="@+id/envia_objeto_txt_telefone"
        android:inputType="number"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/envia_objeto_txt_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:layout_alignBaseline="@id/envia_objeto_edt_telefone"/>

    <TextView
        android:id="@+id/envia_objeto_txt_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/envia_objeto_rgr_sexo"
        android:paddingBottom="10dp"

        android:text="Sexo:"
    />

    <RadioGroup
        android:id="@+id/envia_objeto_rgr_sexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/envia_objeto_edt_telefone"
        android:layout_toRightOf="@id/envia_objeto_txt_sexo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
        <RadioButton
            android:id="@+id/envia_objeto_rbn_sexo_masculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"/>
        <RadioButton
            android:id="@+id/envia_objeto_rbn_sexo_feminino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Feminino"/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:onClick="enviar"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
