<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.programadoresemacao.activity.RecebeObjetoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recebe Objeto"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/recebe_objeto_titulo"
    />

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nome:"
        android:layout_below="@id/recebe_objeto_titulo"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/txt_par_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_nome"
        android:layout_alignBottom="@id/txt_nome"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/txt_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_nome"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/txt_par_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_telefone"
        android:layout_alignBottom="@id/txt_telefone"
        android:layout_marginLeft="10dp"
    />

    <TextView
        android:id="@+id/txt_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_telefone"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/txt_par_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_sexo"
        android:layout_alignBottom="@id/txt_sexo"
        android:layout_marginLeft="10dp"
    />

</RelativeLayout>
